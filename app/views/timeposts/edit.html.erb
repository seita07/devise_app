<h1>勉強時間の投稿編集ページ</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @timepost, local: true) do |f| %>
      <%= f.label :content %>
      <%= f.text_field :content, class: 'form-control' %>

      <%= f.label :time %>
      <%= f.number_field :time, class: 'form-control' %>

      <%= f.submit "内容を変更する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>